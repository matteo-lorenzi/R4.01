{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}home.index.title{% endtrans %}
{% endblock %}

{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<h3>
				<i class="fas fa-home"></i>
				{% trans %}home.index.header{% endtrans %}
			</h3>
		</div>
		<div class="card-body">
			<div class="card clickable" onclick="location = '{# TODO #}'">
				<img src="{{ asset('images/epicerie.jpg') }}" class="card-img-top" alt="{% trans %}home.index.logo_alt{% endtrans %}"/>
				<div class="card-body">
					<p class="card-text">
						{% trans %}home.index.card_text{% endtrans %}
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

